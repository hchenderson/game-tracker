rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to games and play sessions
    match /games/{gameId} {
      allow read: if true;
      // Allow writes only from your application's server-side code.
      // For now, we will allow all writes, but you should secure this later.
      allow write: if true;
    }

    match /play_sessions/{sessionId} {
      allow read: if true;
      // Allow writes only from your application's server-side code.
      // For now, we will allow all writes, but you should secure this later.
      allow write: if true;
    }
  }
}